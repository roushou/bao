<span class="text-arcade-yellow">[context]</span>
fields = [<span class="text-arcade-lime">"config"</span>, <span class="text-arcade-lime">"client"</span>]`;

const comboRust = `<span class="text-arcade-pink">#[derive(Parser)]</span>
<span class="text-arcade-pink">#[command(name = </span><span class="text-arcade-lime">"deploy-cli"</span><span class="text-arcade-pink">)]</span>
