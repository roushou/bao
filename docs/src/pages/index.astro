    <script is:inline define:vars={{ codeText }}>
      // --- TYPEWRITER EFFECT ---
      const codeElement = document.getElementById("typewriter");
      let charIndex = 0;

      function typeWriter() {
        if (charIndex < codeText.length) {
          codeElement.innerHTML += codeText.charAt(charIndex);
          charIndex++;
          setTimeout(typeWriter, Math.random() * 30 + 10);
        } else {
          setTimeout(() => {
            codeElement.innerHTML = "";
            charIndex = 0;
            typeWriter();
          }, 5000);
        }
      }

      setTimeout(typeWriter, 1000);

      // --- STARFIELD BACKGROUND ---
      const canvas = document.getElementById("starfield");
      const ctx = canvas.getContext("2d");
      let stars = [];
      let width, height;

      function resize() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
      }

      // Arcade color palette for stars
      const arcadeColors = [
        { r: 255, g: 0, b: 255 },   // pink
        { r: 0, g: 255, b: 255 },   // cyan
        { r: 57, g: 255, b: 20 },   // lime
        { r: 255, g: 215, b: 0 },   // yellow
        { r: 123, g: 44, b: 191 },  // purple
      ];

      class Star {
        constructor() {
          this.reset();
        }

        reset() {
          this.x = (Math.random() - 0.5) * width * 2;
          this.y = (Math.random() - 0.5) * height * 2;
          this.z = Math.random() * width;
          this.pz = this.z;
          this.color = arcadeColors[Math.floor(Math.random() * arcadeColors.length)];
        }

        update() {
          this.z = this.z - 10;
          if (this.z < 1) {
            this.reset();
          }
        }

        draw() {
          const sx = (this.x / this.z) * width + width / 2;
          const sy = (this.y / this.z) * height + height / 2;
          const r = (1 - this.z / width) * 4;
          const px = (this.x / this.pz) * width + width / 2;
          const py = (this.y / this.pz) * height + height / 2;

          this.pz = this.z;

          if (sx < 0 || sx > width || sy < 0 || sy > height) return;

          const alpha = 1 - this.z / width;
          const { r: cr, g: cg, b: cb } = this.color;

          ctx.beginPath();
          ctx.moveTo(px, py);
          ctx.lineTo(sx, sy);
          ctx.strokeStyle = `rgba(${cr}, ${cg}, ${cb}, ${alpha})`;
          ctx.stroke();

          ctx.beginPath();
          ctx.arc(sx, sy, r > 0 ? r : 0, 0, Math.PI * 2);
          ctx.fillStyle = `rgb(${cr}, ${cg}, ${cb})`;
          ctx.fill();
        }
      }

      function initStars() {
        stars = [];
        for (let i = 0; i < 4000; i++) {
          stars.push(new Star());
        }
      }

      function animateStars() {
        ctx.fillStyle = "rgba(5, 4, 10, 0.4)";
        ctx.fillRect(0, 0, width, height);

        stars.forEach((star) => {
          star.update();
          star.draw();
        });

        requestAnimationFrame(animateStars);
      }

      window.addEventListener("resize", resize);
      resize();
      initStars();
      animateStars();

      // --- CLIPBOARD ---
      function copyToClipboard(text, btn) {
        navigator.clipboard.writeText(text);
        const original = btn.innerHTML;
        btn.innerHTML = `<span class="text-green-500 font-arcade text-xs">OK!</span>`;
        setTimeout(() => {
