import { parseChangelog, formatDate } from "../utils/changelog";

const releases = parseChangelog(3);

const codeText = `[cli]
name = "deploy"
version = "1.0.0"
description = "Deploy applications to the cloud"

[commands.up]
description = "Deploy to an environment"
args = ["environment"]
flags = ["force", "dry-run", "verbose"]

[commands.logs]
description = "Stream logs from a deployment"
args = ["service"]
flags = ["follow", "tail"]

[commands.rollback]
description = "Rollback to previous version"
flags = ["confirm"]`;

const comboInput = `<span class="text-arcade-yellow">[cli]</span>
