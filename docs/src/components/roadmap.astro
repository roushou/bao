<section id="roadmap" class="py-12 md:py-20 relative">
  <div class="container mx-auto px-4">
    <h2
      class="text-2xl md:text-3xl lg:text-4xl font-arcade text-center mb-4 text-arcade-yellow"
    >
      <span class="border-b-4 border-arcade-yellow pb-2">ROADMAP</span>
    </h2>
    <p class="text-gray-400 text-center mb-8 md:mb-16 max-w-2xl mx-auto text-sm md:text-base">
      What's coming next
    </p>

    <div class="max-w-4xl mx-auto">
      <!-- Terminal Window -->
      <div class="border-2 border-arcade-yellow rounded-lg overflow-hidden shadow-[0_0_25px_rgba(255,215,0,0.2)]">
        <!-- Terminal header -->
        <div class="bg-black px-4 py-3 border-b-2 border-arcade-yellow/50 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="flex gap-2">
              <div class="size-3 bg-arcade-yellow shadow-[0_0_8px_rgba(255,215,0,0.8)]"></div>
              <div class="size-3 bg-arcade-yellow/50"></div>
              <div class="size-3 bg-arcade-yellow/50"></div>
            </div>
            <span class="font-arcade text-[10px] text-arcade-yellow">roadmap.md</span>
          </div>
          <span class="font-arcade text-[8px] text-arcade-lime animate-pulse">LIVE</span>
        </div>

        <!-- Content -->
        <div class="bg-arcade-dark p-6 space-y-6">
          <!-- Available Now -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <span class="font-arcade text-arcade-lime text-sm">// AVAILABLE NOW</span>
              <span class="font-arcade text-[10px] text-black bg-arcade-lime px-2 py-0.5">STABLE</span>
            </div>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="border border-arcade-lime/50 bg-black p-4 flex items-center gap-4 shadow-[0_0_10px_rgba(57,255,20,0.1)]">
                <div class="size-12 border border-arcade-pink flex items-center justify-center">
                  <span class="font-arcade text-arcade-pink">Rs</span>
                </div>
                <div>
                  <p class="text-white font-arcade text-sm">RUST</p>
                  <p class="text-arcade-pink text-xs font-arcade">+ CLAP</p>
                </div>
                <span class="ml-auto text-arcade-lime font-arcade text-[10px]">████ 100%</span>
              </div>
              <div class="border border-arcade-cyan/50 bg-black p-4 flex items-center gap-4 shadow-[0_0_10px_rgba(0,255,255,0.1)]">
                <div class="size-12 border border-arcade-cyan flex items-center justify-center">
                  <span class="font-arcade text-arcade-cyan">TS</span>
                </div>
                <div>
                  <p class="text-white font-arcade text-sm">TYPESCRIPT</p>
                  <p class="text-arcade-cyan text-xs font-arcade">+ BOUNE</p>
                </div>
                <span class="ml-auto text-arcade-lime font-arcade text-[10px]">████ 100%</span>
              </div>
            </div>
          </div>

          <!-- In Development -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <span class="font-arcade text-arcade-cyan text-sm">// IN DEVELOPMENT</span>
              <span class="font-arcade text-[10px] text-arcade-cyan border border-arcade-cyan px-2 py-0.5 animate-pulse">WIP</span>
            </div>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="border border-gray-700 bg-black/50 p-4 flex items-center gap-4 opacity-70">
                <div class="size-12 border border-gray-600 flex items-center justify-center">
                  <span class="font-arcade text-gray-400">Go</span>
                </div>
                <div>
                  <p class="text-gray-300 font-arcade text-sm">GO</p>
                  <p class="text-gray-500 text-xs font-arcade">+ COBRA</p>
                </div>
                <span class="ml-auto text-arcade-yellow font-arcade text-[10px]">██░░ 50%</span>
              </div>
              <div class="border border-gray-700 bg-black/50 p-4 flex items-center gap-4 opacity-70">
                <div class="size-12 border border-gray-600 flex items-center justify-center">
                  <span class="font-arcade text-gray-400">Py</span>
                </div>
                <div>
                  <p class="text-gray-300 font-arcade text-sm">PYTHON</p>
                  <p class="text-gray-500 text-xs font-arcade">+ CLICK</p>
                </div>
                <span class="ml-auto text-gray-500 font-arcade text-[10px]">░░░░ 0%</span>
              </div>
            </div>
          </div>

          <!-- Future Features -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <span class="font-arcade text-arcade-purple text-sm">// FUTURE</span>
              <span class="font-arcade text-[10px] text-arcade-purple border border-arcade-purple px-2 py-0.5">PLANNED</span>
            </div>
            <div class="border border-gray-700 bg-black/50 p-4">
              <ul class="space-y-2 text-gray-400">
                <li class="flex items-center gap-3">
                  <span class="text-arcade-purple font-arcade">▸</span>
                  <span>Plugin system for custom generators</span>
                  <span class="ml-auto font-arcade text-[10px] text-gray-600">QUEUED</span>
                </li>
                <li class="flex items-center gap-3">
                  <span class="text-arcade-purple font-arcade">▸</span>
                  <span>Config file validation LSP</span>
                  <span class="ml-auto font-arcade text-[10px] text-gray-600">QUEUED</span>
                </li>
                <li class="flex items-center gap-3">
                  <span class="text-arcade-purple font-arcade">▸</span>
                  <span>Visual CLI builder (GUI)</span>
                  <span class="ml-auto font-arcade text-[10px] text-gray-600">QUEUED</span>
                </li>
                <li class="flex items-center gap-3">
                  <span class="text-arcade-purple font-arcade">▸</span>
                  <span>More languages (community vote)</span>
                  <span class="ml-auto font-arcade text-[10px] text-gray-600">QUEUED</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Vote CTA -->
          <div class="border-t border-arcade-yellow/30 pt-6">
            <a
              href="https://github.com/roushou/bao/issues"
              target="_blank"
              class="flex items-center justify-center gap-3 border-2 border-arcade-yellow bg-black px-6 py-3 font-arcade text-sm text-arcade-yellow hover:bg-arcade-yellow hover:text-black transition-all shadow-[0_0_15px_rgba(255,215,0,0.2)] hover:shadow-[0_0_25px_rgba(255,215,0,0.4)]"
            >
              <span>VOTE FOR NEXT FEATURE</span>
              <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
